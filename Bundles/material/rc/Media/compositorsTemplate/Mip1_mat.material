vertex_program stdPos_VP glsl
{
    source stdPos_VP.glsl
    default_params
    {
        param_named_auto MVP worldviewproj_matrix
    }
}


fragment_program Mip_FP_def glsl
{
    source Mip_FP_def.glsl
    default_params
    {
        param_named_auto u_vpWidth viewport_width
        param_named_auto u_vpHeight viewport_height
    }
}



// argument de texture à compléter surement

material Mip1_mat
{
    technique
    {
        pass
        {
            vertex_program_ref stdPos_VP
            {
            }

            fragment_program_ref Mip_FP_def
            {

            }

            texture_unit Mip_prev
            {
            }
        }
    }
}



